---
import { cn } from "@/lib/utils"
import { buttonVariants } from "./ui/button"
import { Image } from "astro:assets"
import logo from "@/assets/restore.webp"
import { links } from "@/lib/constants"
import BurgerMenu from "./BurgerMenu"
---

<nav
  class="flex container items-center justify-between shadow-md fixed top-0 left-0 right-0 z-50 bg-white h-[var(--header-height)] py-3"
>
  <a href="/" class="flex items-center h-full">
    <Image src={logo} alt="Logo" class="object-contain w-fit h-full" />
  </a>
  <BurgerMenu client:only="react" />
  <div class="md:flex gap-8 items-center hidden">
    {
      links.map((link) => (
        <a href={link.href} class="text-text text-sm">
          {link.text}
        </a>
      ))
    }
    <a href="/login" class={cn(buttonVariants({ variant: "accent" }))}
      >Register Now</a
    >
  </div>
</nav>
