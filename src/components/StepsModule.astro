---
import { Image } from "astro:assets";
import WavesPattern from "@/assets/waves-pattern.png";
import AcademicCapIcon from "@/assets/academic-cap.svg";
import BriefcaseIcon from "@/assets/briefcase.svg";
import FormIcon from "@/assets/form.svg";
import { cn } from "@/lib/utils";
import ModuleBackground from "./ModuleBackground.astro";

const steps = [
  {
    title: "Apply Now",
    content:
      "Secure your spot in our exclusive program. Limited spaces ensure personalized attention and optimal learning. Don't miss this life-changing opportunity to transform lives.",
    icon: FormIcon,
    iconSize: "size-8 md:size-9 lg:size-10",
    iconPadding: "p-6",
  },
  {
    title: "Intensive Training",
    content:
      "Dive deep into comprehensive health coaching. Develop expertise in lifestyle medicine, natural remedies, and spiritual wellness through intensive, hands-on learning experiences.",
    icon: AcademicCapIcon,
    iconSize: "size-12 md:size-13 lg:size-14",
    iconPadding: "p-4",
  },
  {
    title: "Practical Experience",
    content:
      "Put your skills into practice during an immersive practicum. Apply your knowledge in real-world settings, building confidence and competence as a lifestyle coach.",
    icon: BriefcaseIcon,
    iconSize: "size-8 md:size-9 lg:size-10",
    iconPadding: "p-6",
  },
];
---

<ModuleBackground>
  <h2 class="text-center text-primary-foreground">
    Your Path to Becoming a<br /><span
      class="marker-underline font-secondary after:bg-highlight-dark"
      >Lifestyle Coach</span
    >
  </h2>
  <div
    class="grid grid-cols-1 gap-10 pt-16 md:grid-cols-2 md:gap-12 lg:grid-cols-3"
  >
    {
      steps.map((step, index) => (
        <div class="relative">
          <div
            class={cn(
              step.iconPadding,
              "w-fit rounded-full bg-background-green",
            )}
          >
            <Image src={step.icon} alt="icon" class={cn(step.iconSize)} />
          </div>
          <h3 class="pt-7 text-primary-foreground">{`Step ${
            index + 1
          }: ${step.title}`}</h3>
          <p class="pt-3 text-sm leading-relaxed text-secondary">
            {step.content}
          </p>
        </div>
      ))
    }
  </div>
</ModuleBackground>
