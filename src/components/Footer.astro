---
import { Image } from "astro:assets";
import WavesPattern from "@/assets/waves-pattern.png";
import { cn } from "@/lib/utils";
import logo from "@/assets/restore.webp";
import { links } from "@/lib/constants";
import { MailIcon, PhoneIcon } from "lucide-react";

interface Props {
  className?: string;
  wrapperClassName?: string;
}

const currentYear = new Date().getFullYear();
---

<div class="relative overflow-hidden" id="footer">
  <Image
    src={WavesPattern}
    alt="banner"
    class="absolute top-0 size-full object-cover"
  />
  <div
    class={cn(
      "relative z-10 container py-20 flex flex-col items-center justify-between",
    )}
  >
    <a href="/" class="w-fit rounded-full bg-white p-4">
      <Image src={logo} alt="Logo" class="w-32 md:w-40 lg:w-48" />
    </a>
    <div
      class="mt-6 grid grid-cols-2 gap-8 gap-x-20 gap-y-2 md:mt-8 md:flex lg:mt-10"
    >
      {
        links.map((link, index) => (
          <a
            href={link.href}
            class="text font-semibold text-highlight underline-offset-2 hover:text-secondary hover:underline"
          >
            {link.text}
          </a>
        ))
      }
    </div>
    <div class="mt-8 flex flex-col items-center gap-3 lg:mt-10">
      <a
        href="mailto:RestoreLCT@gmail.com"
        class="group flex items-center gap-2 text-highlight"
      >
        <MailIcon className="size-5 text-highlight" />
        <p
          class="ml-1 font-normal text-highlight underline-offset-2 group-hover:text-secondary group-hover:underline lg:text-base"
        >
          RestoreLCT@gmail.com
        </p>
      </a>
      <a href="tel:+919655839776" class="group flex items-center gap-2">
        <PhoneIcon className="size-5 text-highlight" />
        <p
          class="ml-1 font-normal text-highlight underline-offset-2 group-hover:text-secondary group-hover:underline lg:text-base"
        >
          +91 9655839776
        </p>
      </a>
    </div>
    <p class="mt-10 text-highlight opacity-70">
      Copyright Â© {currentYear} RLCT. All rights reserved.
    </p>
  </div>
</div>
